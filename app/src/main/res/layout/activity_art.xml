<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="#9487B4DC">

    <ImageView
        android:id="@+id/octopus"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/octopus" />

    <VideoView
        android:id="@+id/voctopus"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/rabbit"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/rabbit" />
    <VideoView
        android:id="@+id/vrabbit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/elephant"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/elephant" />
    <VideoView
        android:id="@+id/velephant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/solar_sys"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/solar_sys" />
    <VideoView
        android:id="@+id/vsolar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/backButton4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Back"
        android:visibility="gone" />

</LinearLayout>

