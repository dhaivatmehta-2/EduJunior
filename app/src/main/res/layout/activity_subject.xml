<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9487B4DC"
    tools:context=".Subject">

    <ImageView
        android:id="@+id/draw"
        android:layout_width="39dp"
        android:layout_height="36dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="356dp"
        android:background="@color/white"
        android:src="@drawable/brushbg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/selectSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="72dp"
        android:shadowColor="@color/black"
        android:shadowDx="3"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="Select Subject"
        android:textColor="#673AB7"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/art1"
        android:layout_width="226dp"
        android:layout_height="246dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="336dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/art"

        />

    <ImageView
        android:id="@+id/english1"
        android:layout_width="163dp"
        android:layout_height="192dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="360dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/english" />

    <ImageView
        android:id="@+id/math1"
        android:layout_width="188dp"
        android:layout_height="223dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/math"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/science1"
        android:layout_width="164dp"
        android:layout_height="204dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:srcCompat="@drawable/science"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>